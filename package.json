{
  "name": "node-typescript",
  "version": "1.0.0",
  "description": "node-typescript",
  "main": "index.js",
  "scripts": {
    "dev": "set NODE_ENV=dev && nodemon --exec ./node_modules/.bin/ts-node -- src/index.ts",
    "build": "npm run build-ts && npm run copy-static-assets",
    "pm2": "npx pm2 start -n 'node-typescript' ./dist/index.js --  -p 8848  --logPath './log' --env 'offline'",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "compile"
  ],
  "author": "packjs",
  "contributors": [
    "packjs"
  ],
  "license": "ISC",
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/js-yaml": "^3.12.1",
    "@types/koa": "^2.0.52",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/lodash": "^4.14.146",
    "@types/shelljs": "^0.8.6",
    "@types/yargs": "^13.0.3",
    "@types/koa2-cors": "^2.0.1",
    "@types/koa-jwt": "^3.3.0",
    "@types/jsonwebtoken": "^8.3.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "shelljs": "^0.8.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "pre-commit": [
    "tslint"
  ],
  "lint-staged": {
    "linters": {
      "{src}/**/*.{ts}": [
        "tslint"
      ]
    }
  },
  "dependencies": {
    "config": "^3.2.4",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.6.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa2-cors": "^2.0.6",
    "pm2": "^4.1.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1",
    "xdatetime": "^1.3.3",
    "yaml": "^1.7.2",
    "yargs": "^14.2.0"
  }
}
