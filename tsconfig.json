{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        // 是否允许把json文件当做模块进行解析
        "resolveJsonModule": true,
        // 所有的语法都会进行严格的检查
        // "strict": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "src/models/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ]
}
